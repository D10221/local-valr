{
  "name": "@local/valr",
  "private": true,
  "version": "0.1.0-alpha",
  "main": "dist/index.js",
  "author": "Mr D.",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/ramda": "^0.27.39",
    "dotenv": "^8.2.0",
    "esbuild": "^0.11.6",
    "express": "^4.17.1",
    "husky": ">=6",
    "lint-staged": ">=10",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "ramda": "^0.27.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "start": "node --inspect -r ts-node/register src/index.ts",
    "build": "rm dist -rf && esbuild --platform=node --bundle src/index.ts --outdir=dist --sourcemap",
    "test": "mocha",
    "format": "prettier src/**/*.ts test/**/*.ts ./*.json -w",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier -w"
    ]
  }
}
